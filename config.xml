<plugin id="cordova-plugin-hyperpay" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>HyperPay</name>
    <js-module src="www/hyperpay.js" name="HyperPay">
        <clobbers target="cordova.plugins.HyperPay" />
    </js-module>

    <!-- Android Platform -->
    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="HyperPay">
                <param name="android-package" value="com.hyperpay.plugin.HyperPay"/>
            </feature>
        </config-file>
        <source-file src="src/android/com/hyperpay/plugin/HyperpayPlugin.kt" target-dir="src/com/hyperpay/plugin" />
        <framework src="src/android/com/hyperpay/plugin/build.gradle" custom="true" />
    </platform>

    <!-- iOS Platform -->
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="HyperPay">
                <param name="ios-package" value="HyperPay" />
            </feature>
        </config-file>
        <source-file src="src/ios/HyperPay.swift" />
        <framework src="src/ios/Frameworks/OPPWAMobile.framework" custom="true" />
    </platform>
</plugin>
